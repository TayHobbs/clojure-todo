<!doctype html>
<html lang="en" data-framework="javascript">
  <head>
    <meta charset="utf-8">
    <title>Todo</title>
    <link rel="stylesheet" href="/styles/importer.css">
  </head>
  <body>
    <section id="todoapp">
      <header id="header">
        <h1>todos</h1>
        <form action="/add-todo" method="POST">
        <input id="new-todo" placeholder="What needs to be done?" type="text" name='todo' autofocus>
        <input type="submit" name="submit" value="Add" style="display: none;"/>
        </form>
      </header>
      <section id="main">
        <input id="toggle-all" type="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        <ul id="todo-list">
            <li class="editing">
                <form action="/completed" method="POST">
                  <input type="text" name="id" value="" style="display: none;">
                    <input type="checkbox" class="toggle" value="" onclick="this.form.submit();" checked />
                    <input type="checkbox" class="toggle" value="" onclick="this.form.submit();" />
                </form>
                <form action="/edit-todo" method="POST">
                  <input type="text" name="id" value="" style="display: none;">
                  <input type="text" class="edit" name="todo" value="" />
                  <input type="submit" name="submit" value="Add" style="display: none;"/>
                </form>
                <form action="/delete-todo" method="POST">
                  <button type="submit" name="id" value="" class="destroy"></button>
                </form>
            </li>
        </ul>
      </section>
      <footer id="footer">
        <span id="todo-count"></span>
        <ul id="filters">
          <li>
            <a href="/" class="selected">All</a>
          </li>
          <li>
            <a href="/active">Active</a>
          </li>
          <li>
            <a href="/completed">Completed</a>
          </li>
        </ul>
        <form action="/clear-completed" method="POST">
          <button type="submit" id="clear-completed">Clear completed</button>
        </form>
      </footer>
    </section>
    <footer id="info">
      <p>HTML and CSS credit: <a href="http://todomvc.com">TodoMVC</a></p>
    </footer>
  </body>
</html>
